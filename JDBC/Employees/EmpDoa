package emplyoee.Dao;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

public class EmpDao {
	

	public void fetchRecord() throws Exception {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/Employees", "root", "root");
		Statement s = c.createStatement();
		ResultSet rs = s.executeQuery("select * from empinfo");

		while (rs.next()) {
			System.out.println(rs.getInt(1) + "   " + rs.getString(2) + "     " + rs.getString(3)+"    "+rs.getInt(4) + "   " + rs.getInt(5) + "     " + rs.getString(6)+ "   "+rs.getInt(7) + "   " + rs.getString(8) + "     " + rs.getString(9)+"    "+rs.getInt(10)  );
		}

		c.close();
	}

	public void insertData() throws Exception {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/Employees", "root", "root");
		Statement s = c.createStatement();
		int check = s.executeUpdate("insert into empinfo(id,name,city,deptid,mobno,email,age,deptname,addreses,salary)values(5,'raj','pune',1005,9880874,'raj07@gmail.com',19,' ios Developer','shiv colony',80000)");
		if (check > 0) {
			System.out.println("Data is Inserted.. !");
		} else {
			System.out.println("Data is Not Inserted.. !");
		}
		c.close();
	}
	
	public void updateData() throws Exception {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/Employees", "root", "root");
		Statement s = c.createStatement();

		int check = s.executeUpdate("update empinfo set name = 'Yash' where id =5 ");

		if (check > 0) {
			System.out.println("Data is updated.. !");
		} else {
			System.out.println("Data is Not updated.. !");
		}
		c.close();
	}
	
	public void deleteData() throws Exception {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/Employees", "root", "root");
		Statement s = c.createStatement();

		int check = s.executeUpdate("delete from empinfo where id = 5");

		if (check > 0) {
			System.out.println("Data is deleted.. !");
		} else {
			System.out.println("Data is Not deleted.. !");
		}
		c.close();
	  }
}
