package emplyoee.Dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

public class LibDoa {
	
	public void fetchRecord() throws Exception {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/Library", "root", "root");
		Statement s = c.createStatement();
		ResultSet rs = s.executeQuery("select * from libinfo");

		while (rs.next()) {
			System.out.println(rs.getInt(1) + "   " + rs.getString(2) + "     " + rs.getString(3)+"    "+rs.getString(4) + "   " + rs.getString(5) + "     " + rs.getInt(6) );
		}

		c.close();
	}

	public void insertData() throws Exception {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/Library", "root", "root");
		Statement s = c.createStatement();
		int check = s.executeUpdate("insert into libinfo(booktitle,bookauthor,libincharge,booksubmit,bookprices)values('Midnight Children ','Salman Rushdie','Shelka Sir','11-11-2011',999)");
		if (check > 0) {
			System.out.println("Data is Inserted.. !");
		} else {
			System.out.println("Data is Not Inserted.. !");
		}
		c.close();
	}
	
	public void updateData() throws Exception {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/Library", "root", "root");
		Statement s = c.createStatement();

		int check = s.executeUpdate("update libinfo set bookauthor = 'joeshpa' where libid =1 ");

		if (check > 0) {
			System.out.println("Data is updated.. !");
		} else {
			System.out.println("Data is Not updated.. !");
		}
		c.close();
	}
	
	public void deleteData() throws Exception {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/Library", "root", "root");
		Statement s = c.createStatement();

		int check = s.executeUpdate("delete from libinfo where libid = 1");

		if (check > 0) {
			System.out.println("Data is deleted.. !");
		} else {
			System.out.println("Data is Not deleted.. !");
		}
		c.close();
	  }
}
