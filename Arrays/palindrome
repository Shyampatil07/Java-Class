	//   Write a program to check whether a 1D array is a palindrome.
	   
	   int []arr= {1,2,3,2,1};
	   boolean pali=true;
	   
	   int start=0;
	   int end=arr.length-1;
	   while(start<end) {
		   if(arr[start]!=arr[end]) {
			   pali=false;
			   break;
		   }
		   start++;
           end--;
	   }
	   if (pali) {
           System.out.println("The array is a Palindrome");
       } else {
           System.out.println("The array is NOT a Palindrome");
       }
	   
